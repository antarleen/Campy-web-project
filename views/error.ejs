<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
        </div>
        <div class="alert alert-danger" role='alert'>
            <h4 class="alert-heading">
                <%=statusCode%> --
                    <%=message%>
            </h4>
            <p>
                <%if (process.env.NODE_ENV !== 'production') {%>
                    <%=err.stack %>
                        <% } %>
            </p>
        </div>
    </div>